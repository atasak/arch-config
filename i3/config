# Set modifier key used everywhere
set $mod Mod4

# Load pywal colors
set_from_resource $bg i3wm.color0
set_from_resource $fg i3wm.color1
set_from_resource $ac i3wm.color2

# Set screen outputs and positions
exec --no-startup-id xrandr --output HDMI-0 --auto --primary --output DP-0 --auto --left-of HDMI-0
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split vertically/horizontally
bindsym $mod+c split h
bindsym $mod+v split v

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Workspace names
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws0 10

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

# Move focused container to workspace
bindsym $mod+Ctrl+1 move container to workspace $ws1
bindsym $mod+Ctrl+2 move container to workspace $ws2
bindsym $mod+Ctrl+3 move container to workspace $ws3
bindsym $mod+Ctrl+4 move container to workspace $ws4
bindsym $mod+Ctrl+5 move container to workspace $ws5
bindsym $mod+Ctrl+6 move container to workspace $ws6
bindsym $mod+Ctrl+7 move container to workspace $ws7
bindsym $mod+Ctrl+8 move container to workspace $ws8
bindsym $mod+Ctrl+9 move container to workspace $ws9
bindsym $mod+Ctrl+0 move container to workspace $ws0

# Move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0; workspace $ws0

# Switch workspace on other screen without losing focus
bindsym Mod1+1 workspace $ws1; workspace back_and_forth
bindsym Mod1+2 workspace $ws2; workspace back_and_forth
bindsym Mod1+3 workspace $ws3; workspace back_and_forth
bindsym Mod1+4 workspace $ws4; workspace back_and_forth
bindsym Mod1+5 workspace $ws5; workspace back_and_forth
bindsym Mod1+6 workspace $ws6; workspace back_and_forth
bindsym Mod1+7 workspace $ws7; workspace back_and_forth
bindsym Mod1+8 workspace $ws8; workspace back_and_forth
bindsym Mod1+9 workspace $ws9; workspace back_and_forth
bindsym Mod1+0 workspace $ws0; workspace back_and_forth
# Set workspaces on display
workspace $ws1 output DP-0
workspace $ws2 output DP-0
workspace $ws3 output primary
workspace $ws4 output primary
workspace $ws5 output primary
workspace $ws6 output primary
workspace $ws7 output primary
workspace $ws8 output primary
workspace $ws9 output primary
workspace $ws0 output primary

# Default application workspaces

assign [class="firefox"] $ws1
assign [class="discord"] $ws1

assign [class="signal"] $ws2

assign [class="jetbrains-clion"] $ws3
assign [class="jetbrains-idea"] $ws3
assign [class="jetbrains-phpstorm"] $ws3
assign [class="jetbrains-pycharm"] $ws3

assign [class="dibidabidab"] $ws9
assign [class="Spotify"] $ws0
# Setup polybar
exec --no-startup-id /home/niek/.bin/launch-polybar

# i3 options
focus_follows_mouse no

# System options
exec --no-startup-id /usr/bin/setxkbmap -option "caps:swapescape"

# Tray icons
exec --no-startup-id volumeicon
exec --no-startup-id blueman-applet

# Backgrond applications
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id nitrogen --restore; sleep 1; picom -b
exec --no-startup-id nm-applet
exec --no-startup-id xfce4-power-manager
exec --no-startup-id clipit
exec_always --no-startup-id ff-theme-util
exec_always --no-startup-id fix_xcursor

# Set volume to 100%
exec --no-startup-id amixer set Master 100%
# Directly start programs
bindsym $mod+Return exec alacritty

# Show/hide polybar
bindsym $mod exec --no-startup-id polybar-msg cmd show
bindsym $mod --release exec --no-startup-id polybar-msg cmd hide

# Other keybindings
bindsym $mod+q kill
bindsym $mod+d exec --no-startup-id dmenu_run -nb "$bg" -nf "$fg" -sb "$ac" -sf "$bg"

# F-keybindings
# Media controls
bindsym XF86AudioPrev exec playerctl previous
# Untested!
bindsym XF86AudioPlayPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym $mod+F2 exec playerctl previous
bindsym $mod+F3 exec playerctl play-pause
bindsym $mod+F4 exec playerctl next

# Screen brightness controls
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym $mod+F5 exec xbacklight -dec 10
bindsym $mod+F6 exec xbacklight -inc 10

# Audio controls
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 5%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 5%+
bindsym $mod+F9 exec --no-startup-id amixer set Master toggle
bindsym $mod+F10 exec --no-startup-id amixer set Master 5%-
bindsym $mod+F11 exec --no-startup-id amixer set Master 5%+

# Screenshot possibilities
bindsym Print --release exec "~/.bin/scrotclip -w"
bindsym $mod+Print --release exec "~/.bin/scrotclip -d"
bindsym Mod1+Sys_Req --release exec "~/.bin/scrotclip -s"
bindsym Shift+Print --release exec "~/.bin/scrotclip -w 4"
bindsym $mod+Shift+Print --release exec "~/.bin/scrotclip -d 4"
bindsym Mod1+Shift+Sys_Req --release exec "~/.bin/scrotclip -s 4"

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r exec --no-startup-id gen-i3-config; restart

# Set shut down, restart and locking features
bindsym $mod+F12 mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (h)ibernate, (r)eboot, (s)hutdown, (t)imed shutdown, (c)ancel shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym s exec --no-startup-id i3exit shutdown, mode "default"
    bindsym t exec --no-startup-id shutdown -h 10, mode "default"
    bindsym c exec --no-startup-id shutdown -c, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym semicolon resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Lock screen
bindsym $mod+z exec --no-startup-id blurlock
# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 4
default_floating_border normal
hide_edge_borders none

# Run pywal scripts
bindsym $mod+F1 exec ~/.theming/scripts/set_and_fetch.sh

