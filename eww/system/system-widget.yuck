(defpoll time :initial '' :interval "1s" "date +'%H:%M:%S'")
(defpoll date :initila '' :interval "10s" "date +'%A %d/%m'")

(defwidget system_bar []
  (box
    :class 'pm-0'
    :orientation 'h'
    :space-evenly false
    :halign 'end'
    (system_time)
    (system_circle 
      :value "${EWW_CPU.avg}"
      :value_back ""
      :display "${round(EWW_CPU.avg, 0)}%"
      :name "CPU")
    (system_circle 
      :value "${100 - (EWW_RAM.available_mem * 100 / EWW_RAM.total_mem)}"
      :value_back "${100 - (EWW_RAM.free_mem * 100 / EWW_RAM.total_mem)}"
      :display "${round(EWW_RAM.used_mem / 1000000000, 1)}GB"
      :name "RAM")
    (system_circle 
      :value "${EWW_DISK['/'].used_perc}"
      :value_back ""
      :display "${round(EWW_DISK['/'].used / 1000000000, 0)}GB"
      :name "DISK")
    (overlay
      (system_circle
        :value "${EWW_BATTERY['BAT0'].capacity}"
        :value_back ""
        :display "${EWW_BATTERY['BAT0'].capacity}%"
        :name "BAT")
      (system_circle_icon
        :icon "system/charging.svg"
        :visible "${EWW_BATTERY['BAT0'].status == 'Charging' || EWW_BATTERY['BAT0'].status == 'Full'}")
    )
    (system_menu)
))
  
(defwidget system_circle [value value_back display name]
  (box
    :class "pm-0"
    :space-evenly false

    (overlay
      (box
        :class "sys-circle-back"
        :space-evenly false
        (circular-progress
          :value value_back
          :thickness 14
          :start-at 75
          :clockwise false)
      )
      (box
        :class "sys-circle-front"
        :space-evenly false
        (circular-progress
          :value value
          :thickness 14
          :start-at 75
          :clockwise false)
      )
    )

    (box
      :orientation "v"
      :space-evenly false
      :class "mp-0 sys-text"

      (revealer
        :transition "slideright"
        :reveal detailed_open
        :duration detailed_dur
        (revealer
          :transition "crossfade"
          :reveal detailed_open
          :duration detailed_dur
          :class "pm-0"
          (label
            :halign "start"
            :class "sys-textbox txt-sm"
            :text "${name}")))

      (revealer
        :transition "slideright"
        :reveal detailed_open
        :duration detailed_dur
        (revealer
          :transition "crossfade"
          :reveal detailed_open
          :duration detailed_dur
          (label
            :halign "start"
            :class "sys-textbox txt-md"
            :text "${display}")))
    )
  )
)

(defwidget system_circle_icon [icon visible]
  (revealer
    :transition "crossfade"
    :reveal visible
    :duration "detailed_dur"
    (box
      :class "pm-0"
      :space-evenly false
      (box
        :class "sys-circle"
        :space-evenly false
        (box
          :class "sys-icon-box"
          :space-evenly false
          (image
            :class "sys-icon"
            :path icon
            :image-width 17
            :image-height 17)
        )
      )
    )
  )
)

(defwidget system_time []
  (box 
    :class 'time-box'
    :orientation 'v'
    :space-evenly false
    (label
      :xalign 100
      :class 'time'
      :text "${time}")
    (label 
      :xalign 100
      :class 'date'
      :text "${date}")
  )
)

(defwidget system_menu []
  (button :class 'sys-button0'
    (box :class 'sys-button1'
      (box :class 'sys-button2'
    )))
  )
